@{
    ViewBag.Title = "News";
}
    @model IList<MVCBase.Domain.Entity.Ba_News>
<style>
    #indexmain {
        overflow: hidden;
        width: 958px;
        height: 100%;
        background: url(/content/Base/Images/base_bg.png) no-repeat 0 0;
    }
    #listwrapper {
        width: 625px;
        margin: 26px auto;
    }
    .listitem {
        height: 180px;
        overflow: hidden;
    }
    .listimg {
        float: left;
        width: 173px;
        height: 172px;
        margin: 3px 5px;
        background: url(/content/Base/Images/listimg_bg.png) no-repeat 0 0;
        overflow: hidden;
        vertical-align:middle;
        text-align: center;
    }
    .listimg table, .listimg tr {
        vertical-align: middle;
        height: 100%;
        width: 100%;
    }
    .listimg td {
        border: 0;
        vertical-align: middle;
        text-align: center;
    }
    .listimg td img {
        width: 134px;
        height: 120px;
    }
    .itemcontent {
        width: 420px;
        height: 100%;
        float: left;
        margin-left: 20px;
        _margin-left: 10px;
        color: #FFF;
        font-family: 細明體;
    }
    .itemtime {
        margin-top: 20px;
    }
    .itemtitle, .itemdescription {
        margin-top: 15px;
    }

</style>
<div id="indexmain" class="clearfix">
    <div id="listwrapper">
        @foreach (var item in Model)
        {
            string tempimg = MVCBase.Common.common.GetRegValue("<img .*?/>",item.Ns_Content);
            tempimg = tempimg.Length > 0 ? tempimg : "<img src=\"/content/Base/Images/defaultimg.jpg\" />";
            <div class="listitem clearfix"><div class="listimg"><table><tr><td>@Html.Raw(tempimg)</td></tr></table></div>
                <div class="itemcontent">
                    <div class="itemtime">@Convert.ToDateTime(item.Ns_BuildTime).ToString("yyyy/MM/dd")</div>
                    <div class="itemtitle">@item.Ns_Title</div>
                    <div class="itemdescription">@item.Ns_SubTitle</div>
                </div>
            </div>
        }
    </div>
</div>

<script type="text/javascript">
    $(function () {
        $("header").addClass("Base_menubar7");
    });
</script>